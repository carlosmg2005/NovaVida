@page
@model IndexModel
@{
    ViewData["Title"] = "TESTE PRÁTICO - NOVA VIDA";
}

<div class="container">
    <h1 class="text-center mt-5">TESTE PRÁTICO - NOVA VIDA</h1>

    <form method="get" class="mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
                <div class="input-group">
                    <input type="text" class="form-control" name="term" placeholder="Digite o termo da pesquisa">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model.Resultados != null && Model.Resultados.Any())
    {
        <h2 class="mt-4">Resultado da Pesquisa</h2>
        <ul>
            @foreach (var resultado in Model.Resultados)
            {
                <li>
                    <a href="/Comentarios?produtoId=@resultado.ProdutoId"> @resultado.Nome - @resultado.Preco</a>
                </li>
            }
        </ul>
    }
</div>
